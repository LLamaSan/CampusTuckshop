{
  "version": 2,
  "builds": [
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "src/api/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/debug",
      "dest": "/src/api/debug.js"
    },
    {
      "src": "/api/auth/(.*)",
      "dest": "/src/api/auth.js"
    },
    {
      "src": "/api/orders/(.*)",
      "dest": "/src/api/orders.js"
    },
    {
      "src": "/api/password/(.*)",
      "dest": "/src/api/password.js"
    },
    {
      "src": "/api/products",
      "dest": "/src/api/products.js"
    },
    {
      "src": "/api/products/(.*)",
      "dest": "/src/api/products.js"
    },
    {
      "src": "/(.*\\..*)",
      "dest": "/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.html"
    }
  ]
}

